<h2>Most-Common Errors and Warnings</h2>

<div class="table-wrapper occurances">
  <div class="table-column">
    <h3>Errors</h3>

    {{#if errorOccurances.length}}
      <table class="summary-table">
        <tbody>
          {{#each errorOccurances}}
            <tr>
              {{#if ruleUrl}}
                <td><a href="{{ruleUrl}}">{{name}}</a></td>
              {{^}}
                <td>{{name}}</td>
              {{/if}}
              <td>{{count}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{^}}
      <p>No errors were found!</p>
    {{/if}}
  </div>
  <div class="table-column">
    <h3>Warnings</h3>

    {{#if errorOccurances.length}}
      <table class="summary-table">
        <tbody>
          {{#each warningOccurances}}
            <tr>
              {{#if ruleUrl}}
                <td><a href="{{ruleUrl}}">{{name}}</a></td>
              {{^}}
                <td>{{name}}</td>
              {{/if}}
              <td>{{count}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{^}}
      <p>No warnings were found!</p>
    {{/if}}
  </div>
</div>
